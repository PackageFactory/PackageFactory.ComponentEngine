export component Button {
  type: ButtonType
  content: slot

  return match (type) {
    ButtonType.LINK -> (
      <a class="btn" href="#">{content}</a>
    )
    ButtonType.BUTTON,
    ButtonType.SUBMIT -> (
      <button
        class="btn"
        type={match (type) {
          ButtonType.SUBMIT -> "submit"
          default -> "button"
        }}
      >
        {content}
      </button>
    )
    ButtonType.NONE -> (
      <div class="btn">{content}</div>
    )
  }
}
